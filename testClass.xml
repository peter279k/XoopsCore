<phpunit
    backupGlobals="false"
    backupStaticAttributes="false"
    colors="false"
    verbose="false"
    stopOnError="false"
    stopOnFailure="false"
    stopOnIncomplete="false"
    stopOnSkipped="false"
    bootstrap="./tests/unit/bootstrap.php"
    >

<testsuites>
    <testsuite name="My Test Suite for Class">
        <directory>./tests/unit/class</directory>
    </testsuite>
</testsuites>

<filter>
    <whitelist>
        <directory suffix=".php">./htdocs/class</directory>
		<exclude>
		</exclude>
    </whitelist>
</filter>

</phpunit>